body:before
  background: #FFF
  content: ''
  top: 63px
  left: 0
  right: 0
  height: 20px
  position: fixed
  z-index:9000
header.header
  z-index:9000
  background: cr_primary
  padding: 0 24px
  position: fixed
  top: 0
  left: 0
  right: 0
  .logo
    color: #eee
    float: left
    margin:0
    padding: 20px 0
    font-size: 2rem

aside
  padding: 0 15px 24px
  position: fixed
  width: 216px
  top: 83px
  bottom: 0
  overflow-x: hidden
  overflow-y: auto

.tree-container
  overflow: auto
  left: 0
  .create
    margin: 12px 0 1.5rem 0
    a
      font-size: 14px
      color: cr_text_primary
      display: block
      text-align: center
      border: 1px solid cr_primary
      padding: 1rem 0
      &:hover
        border: 1px solid cr_text_primary
.tree
  .tree-item .sub-node
    display: none
  .expanded .sub-node
    display: block
  li
    display: block
  a
    color: #333
    display: block
    padding: .5rem 0
    margin: 0 0 0 1.5rem
  .sub-node
    margin: 0 0 0 1.5rem
  .tree-node
    position: relative
  .expandable > .tree-node
    &:before
      color: cr_sub
      padding: .5rem 0
      position: absolute
      top: 0
      bottom: 0
      left: 0
      content: '\1F4C1'
  .expanded > .tree-node
    &:before
      content: '\1F4C2'

.list-container
  left: 215px
  .search
    margin: 12px 0 1.5rem 0
    border: 1px solid cr_primary
    input
      font-size: 14px
      color: cr_text_primary
      display: inline-block
      text-align: left
      width: 144px
      padding: 1rem 0
    &:hover
      border: 1px solid cr_text_primary
    button
      padding: 0
      margin: 0
    button:before
      color: cr_text_primary
      content: '\1F50D'
      font-size: 14px
      padding: 1rem 0.5rem
      display: inline-block
  li
    display: block
    padding: 0.5rem 0
    position: relative
    // &:first-child
    //   padding-top: 0
    .remove
      display: none
      padding: 0
      margin: 0

      &:after
        color: #F7301B
        height: 1rem
        font-size: 1rem
        line-height: 1
        padding: 0
        margin: 0
        content: '\2715 Remove'
    &:hover .create-date
      display: none
    &:hover .remove
      display: inline-block
  a
    font-size: 1.5rem
    color: #333
    margin-right: 12px
    max-width: 59%
    float: left
    display: block
    overflow: hidden
    text-overflow:ellipsis
    white-space: nowrap


  .create-date
    font-size: 10px
    display: inline-block

article
  padding: 12px 36px
  margin: 83px 0 0 432px
  min-width: 500px

  header
    position: relative
  .control
    position: absolute
    top: 3px
    right: 0
    li
      display: inline-block
      margin: 0 0 0 1rem
      a
        display: inline-block
        &:before
          padding: 0 3px 0 0
          display: inline-block
      .edit:before
        content: '\270f'
        transform: rotate(45deg)
      .remove:before
        content: '\2326'
      .copy:before
        content: '\2398'

  h1, h2, h3, h4, h5, h6
    margin:  0 0 1rem 0
  ul, ol, dl
    margin: 0 0 1.5rem 1.5rem
  ul
    list-style-type: circle
  ol
    list-style-type:lower-roman
  p
    margin: 1rem 0
  a
    color: cr_text_primary
