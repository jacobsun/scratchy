@import url('https://fonts.googleapis.com/css?family=Cabin')

cr_primary=#A9E8DC
cr_text_primary=#02BEC4
cr_sub=#0284A8
cr_min=#E1F7E7
cr_text=#273F5E
cr_danger=#F7301B
html
  font-size: 10px
  font-family: 'Cabin', sans-serif
header, footer, section, details, aside, article, main, div, ul, ol, dl, h1, h2, h3, h4, h5, h6, p
  padding: 0
  margin: 0
body
  margin: 0 auto

body *
  box-sizing: border-box
a
  text-decoration: none
ul
  list-style-type: none
  padding:0
  margin: 0
input, button
  appearance: none
  -webkit-appearance: none
  outline: none
  background: none
  border: none
  padding: none
  vertical-align: baseline
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
body
  font-size: 1.4rem
  color: #333
code
  font-family: 'Source Code Pro',Consolas, monospace
  color: #666
  border-left: 1px solid cr_sub
  background: #eee
  overflow: auto
::-webkit-scrollbar
  width: 10px
  background: transparent
::-webkit-scrollbar-thumb
  background: cr_primary
  width: 12px

button:hover, a:hover
  cursor: pointer
a
  color: cr_sub
